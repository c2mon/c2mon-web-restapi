<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false" threshold="all" xmlns:log4j="http://jakarta.apache.org/log4j/">

  <appender name="ConsoleAppender" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %c %x - %m%n" />
    </layout>
  </appender>

  <logger name="cern.c2mon" additivity="false">
    <level value="all" />
    <appender-ref ref="ConsoleAppender" />
  </logger>
  <logger name="org.springframework" additivity="false">
    <level value="warn" />
    <appender-ref ref="ConsoleAppender" />
  </logger>
  <logger name="org.apache.activemq" additivity="false">
    <level value="warn" />
    <appender-ref ref="ConsoleAppender" />
  </logger>
  <root>
    <level value="trace" />
    <appender-ref ref="ConsoleAppender" />
  </root>
</log4j:configuration>